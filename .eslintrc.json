{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["google", "plugin:prettier/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "quotes": ["error", "single"],
    "require-jsdoc": 0,
    "new-cap": 0,
    "no-multi-spaces": 2,
    "no-irregular-whitespace": 2,
    "block-spacing": ["error", "always"],
    "no-unused-vars" : 2
  }
}
